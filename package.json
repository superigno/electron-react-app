{
  "name": "fxchoice-installation-manager",
  "productName": "Global FxChoice Installation Manager",
  "version": "1.0.0",
  "description": "Global FxChoice Installation Manager using Electron",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package --arch ia32",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": "gino.q",
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "GlobalFxChoiceInstallationManager",
        "icon": "assets/icons/pc.ico",
        "win32metadata": {
          "requested-execution-level": "requireAdministrator"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "fxchoice_installation_manager"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/components/App.tsx",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
    "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "css-loader": "^4.3.0",
    "electron": "10.1.5",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.22.1",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^5.2.1",
    "node-loader": "^1.0.2",
    "style-loader": "^1.3.0",
    "ts-loader": "^8.0.11",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@blueprintjs/core": "^3.36.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "electron-squirrel-startup": "^1.0.0",
    "extract-zip": "^2.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
